<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_switch_dialog"
    android:layout_width="@dimen/account_sync_dialog_width"
    android:layout_height="@dimen/account_sync_dialog_height"
    android:background="@drawable/img_popup_box_user">

    <TextView
        android:id="@+id/txt_switch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/account_sync_dialog_left_margin"
        android:layout_marginRight="@dimen/account_sync_dialog_right_margin"
        android:layout_marginTop="@dimen/account_sync_dialog_title_top_margin"
        android:text="@string/estcommon_userLoad_title"
        android:textColor="#000000"
        android:textSize="@dimen/account_sync_dialog_title_font_size" />

    <ImageButton
        android:id="@+id/btn_switch_close"
        android:layout_width="@dimen/account_sync_dialog_close_button_width"
        android:layout_height="@dimen/account_sync_dialog_close_button_height"
        android:layout_alignParentRight="true"
        android:background="@android:color/background_light"
        android:src="@drawable/btn_close_user" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="37dp"
        android:background="#898989" />

    <TextView
        android:id="@+id/txt_switch_confirm_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56.5dp"
        android:layout_marginLeft="@dimen/account_sync_dialog_left_margin"
        android:layout_marginRight="@dimen/account_sync_dialog_right_margin"
        android:lineSpacingExtra="7.5dp"
        android:text="@string/estcommon_userLoad_content"
        android:textColor="#000000"
        android:textSize="@dimen/account_sync_dialog_content_font_size" />

    <TextView
        android:id="@+id/txt_switch_confirm_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_switch_confirm_desc"
        android:layout_marginLeft="@dimen/account_sync_dialog_left_margin"
        android:layout_marginRight="@dimen/account_sync_dialog_right_margin"
        android:layout_marginTop="7.5dp"
        android:text="@string/estcommon_userLoad_confirmText"
        android:textColor="#307FFF"
        android:textSize="@dimen/account_sync_dialog_content_font_size" />


    <EditText
        android:id="@+id/ed_switch_confirm_word"
        android:layout_width="199dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/img_inputbox_user"
        android:hint="@string/estcommon_userLoad_input"
        android:paddingLeft="10sp"
        android:textColor="#7E7D7D"
        android:textSize="@dimen/account_sync_dialog_title_font_size" />

    <Button
        android:id="@+id/btn_switch_confirm"
        android:layout_width="66.5dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_toEndOf="@id/ed_switch_confirm_word"
        android:background="@drawable/btn_confirm_user"
        android:text="@string/estcommon_userLoad_confirmButton"
        android:textColor="#ffffff"
        android:textSize="@dimen/account_sync_dialog_button_font_size" />

</RelativeLayout>