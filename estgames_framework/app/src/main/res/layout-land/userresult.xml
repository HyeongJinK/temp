<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="326dp"
    android:layout_height="179.5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.5dp"
        android:layout_marginTop="14dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:text="@string/userresult_title"/>

    <Button
        android:id="@+id/userResultClose"
        android:layout_width="13.5dp"
        android:layout_height="13.5dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11.5dp"
        android:layout_marginRight="15.5dp"
        android:background="@drawable/btn_close_user"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="37dp"
        android:background="#898989"
        />

    <TextView
        android:id="@+id/userResultSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21.5dp"
        android:layout_marginTop="56.5dp"
        android:lineSpacingExtra="7.5dp"
        android:textSize="12sp"
        android:textColor="#307FFF"
        android:text="@string/userresult_subtitle"/>

    <TextView
        android:id="@+id/userResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userResultSubTitle"
        android:layout_marginLeft="21.5dp"
        android:layout_marginTop="7.5dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:text="@string/userresult_text"/>




    <Button
        android:id="@+id/userResultSubmit"
        android:layout_width="117dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_confirm_user"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textSize="13sp"
        android:textColor="#ffffff"
        android:text="@string/userload_submit"/>
</RelativeLayout>