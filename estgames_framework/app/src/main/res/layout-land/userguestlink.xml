<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EBEAEA">

    <RelativeLayout
        android:layout_width="352.5dp"
        android:layout_height="199dp"
        android:background="@drawable/img_popup_box_user">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.5dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="@string/estcommon_userGuest_title"/>

        <Button
            android:layout_width="13.5dp"
            android:layout_height="13.5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11.5dp"
            android:layout_marginRight="15.5dp"
            android:background="@drawable/btn_close_user"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="37dp"
            android:background="#898989"
            />

        <TextView
            android:id="@+id/userGuestLinkMiddleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21.5dp"
            android:layout_marginTop="56.5dp"
            android:lineSpacingExtra="18dp"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="@string/estcommon_userGuest_middle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#E7E6E6"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="352.5dp"
        android:layout_height="53.5dp"
        android:background="#EBEAEA">
        <Button
            android:id="@+id/userGuestLinkLoginBt"
            android:layout_width="154dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_confirm_user"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="8dp"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:text="@string/estcommon_userGuest_loginBt"/>

        <Button
            android:id="@+id/userGuestLinkBeforeBt"
            android:layout_width="154dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_cancel_user"
            android:layout_toRightOf="@id/userGuestLinkLoginBt"
            android:layout_marginTop="9dp"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:text="@string/estcommon_userGuest_beforeBt"/>
    </RelativeLayout>
</LinearLayout>
