<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="479dp"
    android:layout_height="275.5dp"
    android:background="#353B48">

    <ImageButton
        android:id="@+id/btn_term_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_close" />

    <TextView
        android:id="@+id/txt_term_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textSize="13sp"
        android:textColor="#D6D6D6"
        android:text="@string/estcommon_policy_title"/>

    <TextView
        android:id="@+id/txt_title_for_term_of_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textSize="9sp"
        android:textColor="#FF5F5F"
        android:text="@string/estcommon_policy_subTitle"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        tools:ignore="WebViewLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25.5dp"
            android:layout_marginRight="8dp">
            <WebView
                android:id="@+id/web_term_of_service"
                android:layout_width="210dp"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp">
            </WebView>
            <CheckBox
                android:id="@+id/chk_agreement_of_service"
                android:button="@null"
                android:layout_width="211dp"
                android:layout_height="36dp"
                android:background="@drawable/policybutton"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:text="@string/estcommon_policy_buttonText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <WebView
                android:id="@+id/web_term_of_privacy"
                android:layout_width="210dp"
                android:layout_height="130dp"
                android:layout_marginBottom="8dp">
            </WebView>

            <CheckBox
                android:id="@+id/chk_agreement_of_privacy"
                android:button="@null"
                android:layout_width="211dp"
                android:layout_height="36dp"
                android:background="@drawable/policybutton"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:text="@string/estcommon_policy_buttonText"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>